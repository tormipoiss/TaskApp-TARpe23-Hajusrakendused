{
  "name": "taskapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "subpkg install",
    "dev": "concurrently \"cd frontend && npm run dev\" \"cd backend && npm start\"",
    "start": "concurrently \"cd frontend && npm run build\" \"cd backend && npm start\"",
    "dep-pre": "for %I in (\"frontend\\node_modules\" \"frontend\\dist\" \"backend\\node_modules\" \"backend\\database.sqlite\" \".\\node_modules\") do @(if \"%~nxI\"==\"database.sqlite\" (del /F /Q %I 2>nul) else (rmdir /S /Q %I 2>nul))"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "subpackage": "^1.1.0"
  },
  "subPackages": [
    "backend",
    "frontend"
  ],
  "dependencies": {
    "bcrypt": "^6.0.0",
    "swagger-ui-express": "^5.0.1"
  }
}
